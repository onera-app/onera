{
	"name": "cortex",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"dev": "turbo run dev",
		"dev:web": "turbo run dev --filter=@cortex/web",
		"dev:api": "turbo run dev --filter=@cortex/api",
		"build": "turbo run build",
		"test": "turbo run test",
		"lint": "turbo run lint",
		"type-check": "turbo run type-check",
		"format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
		"clean": "turbo run clean && rm -rf node_modules"
	},
	"devDependencies": {
		"@playwright/test": "^1.57.0",
		"@types/bun": "^1.2.0",
		"playwright": "^1.57.0",
		"prettier": "^3.4.0",
		"turbo": "^2.3.0",
		"typescript": "^5.7.0"
	},
	"packageManager": "bun@1.1.38"
}
