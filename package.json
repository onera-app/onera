{
	"name": "onera",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"dev": "turbo run dev",
		"dev:web": "turbo run dev --filter=@onera/web",
		"dev:server": "turbo run dev --filter=@onera/server",
		"build": "turbo run build",
		"test": "turbo run test",
		"lint": "turbo run lint",
		"type-check": "turbo run type-check",
		"format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
		"clean": "turbo run clean && rm -rf node_modules",
		"db:generate": "turbo run db:generate --filter=@onera/server",
		"db:migrate": "turbo run db:migrate --filter=@onera/server",
		"docker:up": "docker compose up -d",
		"docker:down": "docker compose down",
		"docker:build": "docker compose build"
	},
	"devDependencies": {
		"@playwright/test": "^1.57.0",
		"@types/bun": "^1.2.0",
		"jose": "6.1.3",
		"playwright": "^1.57.0",
		"prettier": "^3.4.0",
		"turbo": "^2.3.0",
		"typescript": "^5.7.0"
	},
	"packageManager": "bun@1.2.5",
	"dependencies": {
		"tippy.js": "6.3.7"
	}
}
