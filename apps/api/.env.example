# Cortex API Development Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# Security
# ============================================
# JWT secret key (generate a strong random string for production)
SECRET_KEY=your-secret-key-change-in-production

# JWT token expiration time in minutes
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# ============================================
# Database
# ============================================
# SQLite database path (relative to apps/api/)
DATABASE_URL=sqlite+aiosqlite:///./cortex.db

# For PostgreSQL in production:
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/cortex

# ============================================
# Server
# ============================================
HOST=0.0.0.0
PORT=8000
RELOAD=true

# ============================================
# CORS
# ============================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000
